@model  EventManager1.Areas.Organizer.Models.OvertrackModels
@{
    ViewBag.Title = "TicketTrackEvent";
    Layout = "~/Areas/Organizer/Views/Shared/_organizerLayout.cshtml";
}

<style>
    @@media all and (min-width: 320px) and (max-width: 480px) {
        .content-wrapper {
            background: #f2edf3;
            padding: 2.75rem 1.25rem;
        }

        .col-md-4.text-center.borderDottedOnLight {
            margin: 0 20px;
        }

        h3, .h3 {
            font-size: 18px;
        }

        .float-right {
            float: right !important;
            margin-top: 25px;
        }

        lable {
            margin-bottom: 10px;
            display: inline-block;
        }

        .padding5 {
            padding: 0 20px !important;
        }

        .card .card-body {
            padding: 10px;
        }

        .table th, td {
            padding: 5px !important
        }
      
        }
    div#datatable_wrapper {
        display: block;
    }
    table#datatable {
        width: 100% !important;
    }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css" />
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title w-100">
            <span class="page-title-icon bg-gradient-primary text-white mr-2">

                <i class="mdi mdi-calendar-multiple menu-icon"></i>
            </span>
            Recent Visitor Overview
            <span class="float-right">
                <lable>Select to filter for an event</lable>

                <select name="ddlCategory" id="ddlCategory" class="selectpicker" data-show-subtext="false" data-live-search="true" onchange="OnEventChange(this)">
                    <option value="select">Choose</option>
                    @{
                        if (Model != null && Model.Events != null)
                        {
                            foreach (var item in Model.Events)
                            {
                                <option value="@item.Id">@item.Text</option>
                            }
                        }
                    }
                </select>
            </span>
        </h3>
    </div>
    @if (Model != null && Model.Tickets.Count > 0)
    {
        string Eventname = Model.Tickets.FirstOrDefault().Eventname;
        int i = 0;

        <div class="row">
            <div class="col-md-12">
                <p>
                    <h3>@Eventname</h3>
                </p>
                <p class="text-muted">
                    @Convert.ToDateTime(Model.Tickets.FirstOrDefault().Startdate).ToString("dd/MM/yyyy hh:mmtt"), @Model.Tickets.FirstOrDefault().Venuename
                </p>
            </div>
        </div>

        <div class="row ">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <table id="datatable" class="table table-striped table-bordered" 
                               cellspacing="0">
                            <thead>
                                <tr>
                                    <th>S. No</th>
                                    <th>User Name</th>
                                    <th>Ticket name</th>
                                    <th>Email</th>

                                    <th>Ticket status</th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var tk in Model.Tickets)
                                {
                                    i = i + 1;
                                <tr>
                                    <td>@i</td>
                                    <td>@tk.Name </td>
                                    <td>
                                        @tk.TicketName
                                    </td>
                                    <td>@tk.TicketbuyerEmail </td>
                                    <td>
                                        @if (tk.CheckInStatus == true)
                                        {
                                            @: Ticket Scaned
                                        }
                                        else
                                        {
                                            @:  Ticket Not Scaned
                                        }

                                    </td>

                                </tr>

                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <p>
                    <h3>Please Search Event</h3>
                </p>
            </div>
        </div>
    }


</div>

<script type="text/javascript">
    $(function () {
        $('#ddlCategory').selectpicker();
    });
    function OnEventChange(element) {
        window.location = '/Organizer/ManageEvent/TicketTrackEvent?EventId=' + element.value;
    }
    $('#datatable').DataTable({
        responsive: true
    });
</script>


