@model  EventManager1.Areas.Organizer.Models.ExceldataModelView
<div class="card">
    <div class="card-body">
        <div class="col-md-12">
            <div>
                Total Emails: @Model.EmailList.Count() <br />
                Amount Paid : @Model.TotalAmount 
            </div>
            <button class="btn btn-danger" onclick="timedRefresh(1)"><i class="fa fa-refresh" aria-hidden="true"></i> Refresh</button>
            <table id="dtBasicExample" class="table table-striped table-bordered"
                   cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Mobile No</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model != null && Model.EmailList != null && Model.EmailList.Count() > 0)
                        {
                            foreach (var item in Model.EmailList)
                            {
                                <tr>
                                    <td>@item.EmailAddress</td>
                                    <td>@item.Mobile</td>
                                    <td>@item.Status</td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
