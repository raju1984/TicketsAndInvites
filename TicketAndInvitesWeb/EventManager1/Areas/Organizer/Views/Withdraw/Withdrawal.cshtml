<script>
    function LoadTicket(Id) {
        $.ajax({
            url: '/Organizer/Withdraw/Withdrawaldetails?EventId=' + Id,
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html',
            success: function (result) {
                $('#divticketcontent').html(result);
                $("#btnticketpopup").trigger("click");
                //$('#tickets').modal('show');
            },
            error: function (xhr, status) {
                alert(status);
            }
        })
    }
    $('#sendreq').click(function () {
        $('#widrequst').css("display", "block");
    })
    $('#walletb').click(function () {
        debugger;
        var val1 = $('#txtAmount').val();
        var val2 = $('#wbalance').val();
        if (parseInt(val1) > parseInt(val2)) { alertify.alert("Requested Amount is grater than wallet amount"); return false; }
    })
    function minmax(value, max) {

        if (value > max)
            return max;
        else return value;
    }
    $(document).ready(function () {
        $('#datatable').DataTable({
            responsive: true
        });
    });
    function OndateChange() {
        var to = $("#txttodate").val();
        var fromdate = $("#txtfromdate").val();
        if (to && fromdate) {
            var d1 = new Date(to);
            var d2 = new Date(fromdate);
            if (d2 > d1) {
                window.location = "/Organizer/Withdraw/Withdrawal?type=3" + "&startdate=" + to + "&enddate=" + fromdate;
            }
        }
    }
    function Updatequest(id) {
        debugger;
        if (id !=null) {
                window.location = "/Organizer/Withdraw/updaterequest?id=" + id;
        }
    }
</script>
