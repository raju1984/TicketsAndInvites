@model  IEnumerable<EventManager1.Models.WithdrawModel>
<div class="modal fade bd-example-modal-lg" id="withdrawalDetail" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalTitle" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title" id="exampleModalTitle">
                    Transferred Amount Details
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <table id="dtBasicExample" class="table table-striped table-bordered"
                                           cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>Ticket Type</th>
                                                <th>Tickets</th>
                                                <th>Total Amount</th>
                                                <th>Commition</th>
                                                <th>Amount Creadited</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null && Model.Count() > 0)
                                            {
                                                foreach (var i in Model)
                                                {
                                                    <tr>

                                                        <td>@i.TicketType</td>
                                                        <td>
                                                            @i.qty/@i.Totalqty
                                                        </td>
                                                        <td>
                                                            @i.TotalAmount Gh₵
                                                        </td>
                                                        <td>
                                                            @i.Commition Gh₵
                                                        </td>
                                                        <td>
                                                            @i.AmountCreadited Gh₵
                                                        </td>
                                                    </tr>}
                                            }
                                            else
                                            {
                                                <tr>

                                                    <td colspan="5" style="text-align:center; color:red; height:100px">
                                                        <span> No Record Found.</span>
                                                    </td>

                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark btn-fw" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>