@model  IEnumerable<EventManager1.Models.TransactionHistory>
@{
    ViewBag.Title = "History";
    Layout = "~/Areas/Organizer/Views/Shared/_organizerLayout.cshtml";
    <style type="text/css">
        .form-inline {
            display: inherit;
            flex-flow: row wrap;
            align-items: center;
        }

        .card .card-body {
            padding: 0.65rem 0.65rem !important;
        }

        .table th, .table td {
            padding: 0.6rem !important
        }

        .form-inline label {
            display: block !important;
        }
    </style>
}

<div class="content-wrapper">

    <div class="page-header">
        <h3 class="page-title">
            <span class="page-title-icon bg-gradient-primary text-white mr-2">
                <i class="mdi mdi-currency-usd"></i>
            </span>
            Transaction History
        </h3>
        <!-- <nav aria-label="breadcrumb">
          <ul class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
              <span></span>Overview
              <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
            </li>
          </ul>
        </nav> -->
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 filter1">
                    <p class="d-inline-block">Event sales</p>
                    <p class="d-inline-block float-right">
                        @{

                        }
                        @if (Request.QueryString["type"] == "0")
                        {
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=0 })">Last Week</a> @:&nbsp;
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=1 })" class="text-muted">Last Month</a> @:&nbsp;
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=2 })" class="text-muted">Last Year</a> @:&nbsp;
                        }
                        else if (Request.QueryString["type"] == "1")
                        {
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=0 })" class="text-muted">Last Week</a> @:&nbsp;
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=1 })">Last Month</a> @:&nbsp;
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=2 })" class="text-muted">Last Year</a> @:&nbsp;
                        }
                        else if (Request.QueryString["type"] == "2")
                        {
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=0 })" class="text-muted">Last Week</a> @:&nbsp;
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=1 })" class="text-muted">Last Month</a> @:&nbsp;
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=2 })">Last Year</a> @:&nbsp;
                        }
                        else if (Request.QueryString["type"] == "3")
                        {
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=0 })" class="text-muted">Last Week</a> @:&nbsp;
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=1 })" class="text-muted">Last Month</a> @:&nbsp;
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=2 })" class="text-muted">Last Year</a> @:&nbsp;
                        }
                        else
                        {
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=0 })">Last Week</a> @:&nbsp;
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=1 })" class="text-muted">Last Month</a> @:&nbsp;
                            <a href="@Url.Action("History","Transaction",new {area="Organizer",type=2 })" class="text-muted">Last Year</a> @:&nbsp;
                        }
                    </p>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="" class="d-inline-block">Start Date</label>
                        <input type="date" class="form-control d-inline-block" id="txttodate" onchange="OndateChange()"
                               aria-describedby="emailHelp" placeholder="">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="" class="d-inline-block">End Date</label>
                        <input type="date" class="form-control d-inline-block" id="txtfromdate" onchange="OndateChange()"
                               aria-describedby="emailHelp" placeholder="">
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">

                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered" id="datatable"
                                       cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Event name</th>
                                            <th>Ticket Name</th>
                                            <th>Booked / Total</th>
                                            <th>Total Amount</th>
                                            <th>Transaction costs</th>
                                            <th>Earned</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model != null && Model.Count() > 0)
                                            {
                                                foreach (var e in Model)
                                                {
                                                    <tr>
                                                        <td>@e.Date</td>
                                                        <td>
                                                            <a href="">
                                                                @e.Eventname
                                                            </a>
                                                        </td>
                                                        <td>@e.TicketName</td>
                                                        <td>@e.Booked/@e.Total</td>
                                                        @if (e.PaymentCurrency == 2)
                                                        {
                                                            <td>@e.GrossTotal $ </td>
                                                            <td>@e.Transactioncosts $ </td>
                                                            <td>@e.TotalEarned $</td>
                                                        }
                                                        else if (e.PaymentCurrency == 3)
                                                        {
                                                            <td>@e.GrossTotal £ </td>
                                                            <td>@e.Transactioncosts £ </td>
                                                            <td>@e.TotalEarned £</td>
                                                        }
                                                        else if (e.PaymentCurrency == 4)
                                                        {
                                                            <td>@e.GrossTotal € </td>
                                                            <td>@e.Transactioncosts € </td>
                                                            <td>@e.TotalEarned €</td>

                                                        }
                                                        else
                                                        {
                                                            <td>@e.GrossTotal Gh₵ </td>
                                                            <td>@e.Transactioncosts Gh₵ </td>
                                                            <td>@e.TotalEarned Gh₵ </td>
                                                        }

                                                    </tr>
                                                }
                                            }
                                        }
                                        @*<tr>
                                                <td>DD/MM/YYY </td>
                                                <td>
                                                    <a href="">
                                                        Event 1 Name
                                                    </a>
                                                </td>
                                                <td>10 Jul 2019 18:00 - 20:00 </td>
                                                <td>0 / 70 </td>
                                                <td>00.00 Gh₵ </td>
                                                <td>00.00 Gh₵ </td>
                                            </tr>*@
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#datatable').DataTable({
            responsive: true
        });
    });
    function OndateChange() {
        var to = $("#txttodate").val();
        var fromdate = $("#txtfromdate").val();
        if (to && fromdate) {
            var d1 = new Date(to);
            var d2 = new Date(fromdate);
            if (d2 > d1) {
                window.location = "/Organizer/Transaction/History?type=3" + "&startdate=" + to + "&enddate=" + fromdate;
            }
        }
    }
</script>
