
@{
    ViewBag.Title = "LiveHLSStream";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" rel="stylesheet"><!-- https://getbootstrap.com -->
    <link href="https://vjs.zencdn.net/5.19.2/video-js.css" rel="stylesheet"><!-- https://videojs.com -->
    <style type="text/css">

        .video-js {
            font-size: 1rem;
        }
    </style>
}

    <div class="container">
        <div class="my-5 embed-responsive embed-responsive-16by9">
            <video id="video" class="embed-responsive-item video-js vjs-default-skin" width="640" height="360" autoplay controls></video>
        </div>

    </div>
    <script src="https://vjs.zencdn.net/5.19.2/video.js"></script><!-- https://videojs.com -->
    <script src="~/js/HlsJs/hls.min.js?v=v0.9.1"></script><!-- https://github.com/video-dev/hls.js -->
    <script src="~/js/HlsJs/videojs5-hlsjs-source-handler.min.js?v=0.3.1"></script><!-- https://github.com/streamroot/videojs-hlsjs-plugin -->
    <script src="~/js/HlsJs/vjs-quality-picker.js?v=v0.0.2"></script><!-- https://github.com/streamroot/videojs-quality-picker -->
    <script>
        var player = videojs('video');

        player.qualityPickerPlugin();

        player.src({
            src: 'https://cf98fa7b2ee4450e.mediapackage.us-east-1.amazonaws.com/out/v1/48a896f76f4342a7a1971c937e5b9b15/index.m3u8',
            type: 'application/x-mpegURL'
        });

        player.play();</script>


