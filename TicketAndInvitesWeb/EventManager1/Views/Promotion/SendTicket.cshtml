
@{
    ViewBag.Title = "Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <style>
        .mt-5, .my-5 {
            margin-top: 6rem !important;
        }
        .card {
            min-height: 500px !important;
        }
        .site-header {
            padding-top: 150px;
            margin: 0 auto;
            padding: 79px 122px 25px;
            max-width: 820px;
        }
        .site-header__title {
            font-size:5rem;
            margin: 0;
            font-family: Montserrat,sans-serif;
            font-weight: 700;
            line-height: 1.1;
            text-transform: uppercase;
        }
        .main-content {
            margin: 0 auto;
            max-width: 820px;
        }
        .main-content__checkmark {
            font-size: 9.75rem;
            line-height: 1;
            color: #24b663;
        }
        .fa-check:before {
            content: "\f00c";
        }
        .main-content__body {
            font-size: 1.25rem;
            margin: 20px 0 0;
            line-height: 1.4;
        }
        header{
            display:contents;
        }
    </style>
}
<div class="container-fluid bgContainer">
    <div class="row">
        <div class="container">
            <div class="row  mt-5 mb-5">
                <div class="col-md-12 my-auto">
                    <div class="card d-flex">
                        <div class="card-body">
                            <div class="mb-3 text-center">
                                @if (ViewData["Status"] != null && ViewData["Status"].ToString() == "Mobile")
                                {
                                    @*<header class="site-header" id="header">
                                        <h1 class="site-header__title" data-lead-id="site-header-title" style="padding-top:50px">THANK YOU!</h1>
                                    </header>*@
                                    <div class="main-content">
                                        @*<i class="fa fa-check main-content__checkmark" id="checkmark"></i>*@
                                        <p class="main-content__body" data-lead-id="main-content-body" style="padding:50px">Kindly use the links below to confirm your attendance and <br /> an event pass will be delivered to you via your mobile number and email.</p>
                                        <a target="_blank" href="~/Promotion/SendTicket?EventTickeId=@ViewData["EventTickeId"]&Status=1" style="background-color:darkgreen;padding:5px; color:#fff; text-decoration: none">Confirm  </a> &nbsp; &nbsp;
                                        <a target="_blank" href="~/Promotion/SendTicket?EventTickeId=@ViewData["EventTickeId"]&Status=2" style="background-color:#b79e0f;padding:5px; color:#fff;text-decoration: none">Tentative  </a> &nbsp; &nbsp;
                                        <a target="_blank" href="~/Promotion/SendTicket?EventTickeId=@ViewData["EventTickeId"]&Status=3" style=" background-color:#ba1a1a;padding:5px; color:#fff;text-decoration: none">Sorry Cant make it</a>
                                        <br />
                                    </div>
                                }
                                else if (ViewData["Status"] != null && ViewData["Status"].ToString() == "Success")
                                {
                                    <header class="site-header" id="header">
                                        <h1 class="site-header__title" data-lead-id="site-header-title">THANK YOU!</h1>
                                    </header>
                                    <div class="main-content">
                                        <i class="fa fa-check main-content__checkmark" id="checkmark"></i>
                                        <p class="main-content__body" data-lead-id="main-content-body">
                                            You've Made A Great Decision<br />
                                            Thank you for your interest. You will find all your tickets in your Email.
                                        </p>
                                    </div>
                                }
                                else if (ViewData["Status"] != null && ViewData["Status"].ToString() == "Tentative")
                                {
                                    <header class="site-header" id="header">
                                        <h1 class="site-header__title" data-lead-id="site-header-title">THANK YOU!</h1>
                                    </header>
                                    <div class="main-content">
                                        <i class="fa fa-check main-content__checkmark" id="checkmark"></i>
                                        <p class="main-content__body" data-lead-id="main-content-body">
                                            Thank you for the quick response.<br />
                                            We will be Happy if you will able to attend this event, however we do realize that certain circumstances cannot always be avoided.
                                            If anytime you feel you are able to attend this event let us know.
                                        </p>
                                    </div>
                                }
                                else
                                {

                                    <header class="site-header" id="header">
                                        <h1 class="site-header__title" data-lead-id="site-header-title">THANK YOU!</h1>
                                    </header>
                                    <div class="main-content">
                                        <i class="fa fa-check main-content__checkmark" id="checkmark"></i>
                                        <p class="main-content__body" data-lead-id="main-content-body">
                                            Thank you for the quick response.<br />
                                            We are disappointed to hear that you will be unable to attend this event,
                                            however we do realize that certain circumstances cannot always be avoided.
                                            We hope that in future when circumstances will be favourable, we can have you on the board. Thanks Again.
                                        </p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                </div>
                
            </div>
        </div>
    </div>
</div>


