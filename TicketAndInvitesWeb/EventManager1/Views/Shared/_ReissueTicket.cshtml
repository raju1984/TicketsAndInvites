@model  IEnumerable<EventManager1.Models.ReissueFailedpaymentmodel>

<style type="text/css">
    body {
        margin: 0px;
        padding: 0px;
    }

    .event-header {
        background-image: url('../../images/bg.jpg');
        min-height: 350px;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        position: relative
    }

        .event-header a {
            color: #FFF;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 0.3px;
            font-size: 13px;
            display: inline-block;
            border-bottom: 1px dashed #fff;
            padding-bottom: 3px;
            opacity: 0.5;
            text-decoration: none;
            position: absolute;
            left: 40px;
            top: 30px;
        }

            .event-header a:hover {
                opacity: 1
            }

    .white-bg {
        min-height: 250px;
        background: #FFF;
        box-shadow: 0px 0px 21px 0px rgb(0 0 0 / 17%);
        /*width: 450px;*/
        margin: -100px auto 10px;
        max-width: 100%;
        border-radius: 50px;
        padding: 25px 50px;
        margin-bottom: 35px;
    }

    .header-box {
        padding: 0 25px;
        margin-bottom: 25px;
    }

    .white-bg h1 {
        margin-bottom: 5px;
        color: #3a3c63;
        font-family: 'Montserrat', sans-serif;
        font-weight: 800;
        text-align: center;
    }

    .white-bg p {
        color: #3a3c63;
        text-align: center;
        margin: 0px;
        font-family: 'Montserrat', sans-serif;
        font-size: 14px;
        font-weight: 600;
        letter-spacing: 0;
    }

    .white-bg hr {
        height: 1px;
        border: 0;
        background: rgb(255,255,255);
        background: linear-gradient(90deg, rgba(255,255,255,1) 0%, rgba(189,36,127,1) 10%, rgba(189,36,127,1) 90%, rgba(255,255,255,1) 100%);
    }


    .checkbox-ui {
        text-align: left;
        color: #37365e;
        font-family: 'Montserrat', sans-serif;
        display: block;
        position: relative;
        padding-left: 35px;
        margin-bottom: 12px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 600;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

        .checkbox-ui input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
            height: 0;
            width: 0;
        }

    .checkmark {
        position: absolute;
        top: 0;
        left: 0;
        height: 23px;
        width: 23px;
        background-color: #f9f9f9;
        border: 3px solid #2e2951;
        border-radius: 4px;
    }

    .checkbox-ui:hover input ~ .checkmark {
        background-color: #e2deff;
    }

    .checkbox-ui input:checked ~ .checkmark {
        background-color: #312c54;
    }

    .checkmark:after {
        content: "";
        position: absolute;
        display: none;
    }

    .checkbox-ui input:checked ~ .checkmark:after {
        display: block;
    }

    .checkbox-ui .checkmark:after {
        left: 6.5px;
        top: 2px;
        width: 6px;
        height: 11px;
        /* background: #ffffff; */
        border-bottom: 2px solid #FFF;
        border-right: 2px solid #FFF;
        transform: rotate(40deg);
    }

    .form-check {
        border-bottom: 2px solid #bb257c;
        margin-top: 20px;
        padding-bottom: 5px;
        padding-left: 0;
    }

    .btn-pink {
        font-family: 'Montserrat', sans-serif;
        background: #bd247f;
        color: #FFF;
        text-decoration: none;
        padding: 10px 35px;
        display: inline-block;
        border-radius: 50px;
        box-shadow: 0px 10px 11px 0px rgb(189 36 127 / 33%);
        margin-top: 20px;
        font-weight: 800;
    }

        .btn-pink:hover {
            color: #ffa7db;
        }

    .body-box, .footer-box {
        text-align: center;
    }

    p.bootom-text {
        margin-top: 30px;
        font-size: 13px;
        letter-spacing: 0.3px;
        line-height: 20px;
    }

    .bootom-text a {
        color: #bd247f;
        font-weight: 800;
    }

    .footer-box img {
        width: 120px;
        margin-bottom: 20px;
    }

    @@media (max-width: 470px) {
        .white-bg {
            padding: 25px;
        }
    }

    @@media (max-width: 380px) {
        .white-bg h1 {
            font-size: 25px;
        }
    }

    .error-box p {
        color: #F00;
        margin-bottom: 10px;
    }

    .body-box {
        padding: 20px 0;
    }

    .table-ui {
        width: 100%;
        text-align: left;
        font-family: 'Montserrat', sans-serif;
    }

        .table-ui th {
            text-transform: uppercase;
            font-size: 12px;
            font-weight: 800;
            letter-spacing: 0.3px;
            color: #3a3c63;
            border: 1px solid #3a3c63;
            padding: 10px;
        }

        .table-ui td {
            font-size: 12px;
            font-weight: 600;
            letter-spacing: 0.3px;
            color: #3a3c63;
            border: 1px solid #bd247f;
            padding: 10px;
        }

        .table-ui .btn {
            margin-top: 0px;
            font-size: 13px;
            padding: 5px 13px;
            font-weight: 600;
        }
</style>

<div class="white-bg">
    <div class="error-box">
        <p>
        </p>
    </div>
    <div class="header-box">
        <h1>Reissue Ticket List</h1>

        <hr>
    </div>
    <div class="body-box">
        <table class="table-ui">
            <thead>
                <tr>
                    <th>Event Name</th>
                    <th>Ticket Name</th>
                    <th>Transaction Id</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>

                @{
                    if (Model != null && Model.Count()>0)
                    {
                        foreach (var e in Model)
                        {

                            <tr>
                                <td>
                                    @e.EventName
                                </td>
                                <td>
                                    @e.TicketName
                                </td>
                                <td>
                                    @e.TransactionId
                                </td>
                                <td>
                                    <button type="button" id="btnSubmit" class="btn btn-pink" onclick="LoadTicket('@e.PaymentId', '@e.TransactionId', '@e.PaymentFor','@e.Gateway',@e.EventId);"> Reissue Ticket</button>
                                </td>
                            </tr>

                        }


                    }
                    else
                    {
                        <span style="color:red;">No Data Found</span>
                    }
                }

            </tbody>
        </table>

    </div>

</div>



