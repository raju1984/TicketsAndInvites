                         }
                         else if (parseInt(Offertype) == 2) {
                             discount = parseFloat(Pdiscount);
                             totalamount = total - parseFloat(Pdiscount);
                         }

                         $("#discount").text(parseFloat(discount).toFixed(2));
                     }
                     var sTotal = totalamount.toFixed(2);
                     $("#lbltotal").text(sTotal);
                     $("#lblsingletotal").text(sTotal);
                 }
             });
            });
         $(function () {

