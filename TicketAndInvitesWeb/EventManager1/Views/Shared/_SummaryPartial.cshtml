                    AddTickeToCart($('#hdnsingleTicketId').val(), $('#hdnsingleTicket').val());
                    $('#lbltotal').text($('#hdnsingleTicket').val());
                }

            $(document).on("click", ".minus", function () {
                debugger;
                 var current = $('.quantity').val();
                 if (parseInt(current) > 1) {
                     var rPrice = parseFloat($('#hdnsingleTicket').val());
                     $('.quantity').val(parseInt(current) - 1);
                     AddTickeToCart($('#hdnsingleTicketId').val(), $('#hdnsingleTicket').val(), parseInt(current) - 1);
                     var total = rPrice * (parseInt(current) - 1);

                     var totalamount = total;
                     var discount = 0;
                     var Offertype = $("#offerid").attr("sn-type");
                     var Pdiscount = $("#offerid").attr("sn-offer");

                     if (typeof Offertype !== 'undefined' && Offertype !== false && typeof Pdiscount !== 'undefined' && Pdiscount !== false) {
                         if (parseInt(Offertype) == 1) {
                             discount = total * parseFloat(Pdiscount) / 100;
                             totalamount = total - discount;
                         }
                         else if (parseInt(Offertype) == 2) {
                             discount = parseFloat(Pdiscount);
                             totalamount = total - parseFloat(Pdiscount);
                         }

                         $("#discount").text(parseFloat(discount).toFixed(2));
                     }
                     var sTotal = totalamount.toFixed(2);
                     $("#lbltotal").text(sTotal);
                     $("#lblsingletotal").text(sTotal);
                 }
             });

            $(document).on("click", ".plus", function () {
                debugger;
                 var current = $('.quantity').val();
                 var max = $('.quantity').attr('max');
                 if (parseInt(current) < parseInt(max)) {
                     var rPrice = parseFloat($('#hdnsingleTicket').val());
                     $('.quantity').val(parseInt(current) + 1);
                     AddTickeToCart($('#hdnsingleTicketId').val(), $('#hdnsingleTicket').val(), parseInt(current) + 1);
                     var total = rPrice * (parseInt(current) + 1);
                     var totalamount = total;
                     var discount = 0;
                     var Offertype = $("#offerid").attr("sn-type");
                     var Pdiscount = $("#offerid").attr("sn-offer");

                     if (typeof Offertype !== 'undefined' && Offertype !== false && typeof Pdiscount !== 'undefined' && Pdiscount !== false) {
