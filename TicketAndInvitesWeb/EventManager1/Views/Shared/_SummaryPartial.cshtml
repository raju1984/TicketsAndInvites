            $('#applycoupan').click(function () {
                debugger;
                var coupan = $('#Coupancode').val();
                var ticketId = $('#hdnsingleTicketId').val();
                var tickcount = '@Model.Tickest.Count()';
                var total;
                if (parseInt(tickcount) < 2) {
                    total = $('#lblsingletotal').text();
                }
                else{
                    var total = $('#lbltotal').text();
                }
                var offeri = $("#offerid").val();
                var evID = '@ViewBag.evId';
                if (offeri == '' || offeri == null) {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("checkOffers", "Payment")',
                        data: '{coupan: ' + JSON.stringify(coupan) + ', eventId: ' + JSON.stringify(evID) + ',ticketId: ' + JSON.stringify(ticketId)+'}',  //{ model: logindata, returnUrl: returnUrl },
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (resp) {
                            debugger;
                            var discount;
                            var totalamount;
                            if (resp != null) {
                                if (resp[0].Offertype == 1) {
                                    discount = total * resp[0].discount / 100;
                                    totalamount = total - discount;
                                }
                                else if (resp[0].Offertype == 2)
                                {
                                    discount = resp[0].discount;
                                    totalamount = total - resp[0].discount;
                                }
                                $("#lbltotal").text(parseFloat(totalamount).toFixed(2));
                                $("#lblsingletotal").text(parseFloat(totalamount).toFixed(2));
                                $("#discount").text(parseFloat(discount).toFixed(2));
                                $("#offerid").val(resp[0].Id);
                                $("#offerid").attr("sn-type", resp[0].Offertype);
                                $("#offerid").attr("sn-offer", resp[0].discount);
                                if (totalamount == 0) {
                                    $("#fpay").css("display", "none");
                                    $("#fdiscount").css("display", "block");
                                }
                            }
                            else { alertify.alert("Invalid Coupon"); }

                        },
