<script type="text/javascript">
    function Loader(_value) {
        if (_value) {
            document.getElementById("divloader1").style.display = "flex";
        }
        else {
            document.getElementById("divloader1").style.display = "none";
        }
        setTimeout(function () { document.getElementById("divloader1").style.display = "none"; }, 360000);
    }
</script>
