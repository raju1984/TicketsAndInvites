<script>

    $(document).ready(function () {
        var EmailId = $("#EmailAddress").val();
        var Url = $("#Url").val();
        debugger;
        Loader(true);
        $.ajax({
            url: "/Home/ListReIssueTicket?EmailId=" + EmailId + "&Url=" + Url,
            type: "POST",
            contentType: 'application/html; charset=utf-8',
            dataType: 'html',
            success: function (result) {
                debugger;
                Loader(false);
                $('#divload').html(result);
                $("#divLoader1").hide();
                swal({
                    title: "No, Pending and failed payment",
                    icon: "success"
                })
            },
            //error: function (err) {
            //    console.log(err);
            //    alert(err);

            //}
        });

    });


    function LoadTicket(Id, paymId, pfor, gateway, EventId) {
        debugger;
        Loader(true);
        $.ajax({
            url: '/Home/ChecktrxStatusUser?PaymentId=' + Id + '&TrxNo=' + paymId + '&paymentfor=' + pfor + '&PayGateway=' + gateway + '&EventId=' + EventId,
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html',
            success: function (result) {
                Loader(false);
                $('#divticketcontent').html(result);
                $("#btnticketpopup").trigger("click");
                //$('#tickets').modal('show');
            },
            error: function (xhr, status) {
                Loader(false);
                alert(status);
            }
        })

    }

</script>

